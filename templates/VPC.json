{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "Creates a VPC and an InternetGateway.",

  "Parameters" : {
    "CidrBlock" : {
      "Description" : "The Block of IP for this VPC. (10.1 or 10.10 or 10.128 etc.)",
      "Type" : "String"
    }
  },

  "Resources" : {

    "VPC" : {
      "Type" : "AWS::EC2::VPC",
      "Properties" : {
	"EnableDnsSupport" : true,
	"EnableDnsHostnames" : true,
        "CidrBlock" : { "Fn::Join" : [ "", [ { "Ref" : "CidrBlock" }, ".0.0/16" ] ] },
        "Tags" : [
          { "Key" : "Name", "Value" : "askdarcel VPC" }
        ]
      }
    },

    "InternetGateway" : {
      "Type" : "AWS::EC2::InternetGateway",
      "Properties" : {
        "Tags" : [ { "Key" : "Application", "Value" : { "Ref" : "AWS::StackId"} } ]
      }
    },

    "AttachGateway" : {
      "Type" : "AWS::EC2::VPCGatewayAttachment",
      "Properties" : {
        "VpcId" : { "Ref" : "VPC" },
        "InternetGatewayId" : { "Ref" : "InternetGateway" }
      }
    },

    "PublicRouteTable" : {
      "Type" : "AWS::EC2::RouteTable",
      "Properties" : {
        "VpcId" : { "Ref" : "VPC" },
        "Tags" : [
          { "Key" : "Application", "Value" : { "Ref" : "AWS::StackName" } },
          { "Key" : "Network", "Value" : "Public" },
          { "Key" : "Name", "Value" : {
	    "Fn::Join": [ " ", [ "Public Route Table:",
				{ "Ref" : "AWS::StackName" } ] ] }
	  }
        ]
      }
    },

    "PublicRoute" : {
      "Type" : "AWS::EC2::Route",
      "Properties" : {
        "RouteTableId" : { "Ref" : "PublicRouteTable" },
        "DestinationCidrBlock" : "0.0.0.0/0",
        "GatewayId" : { "Ref" : "InternetGateway" }
      }
    }

  },

  "Outputs" : {
    "VpcId" : {
      "Description" : "VpcId of the VPC",
      "Value" : { "Ref" : "VPC" }
    },

    "InternetGateway" : {
      "Description" : "Internet Gateway",
      "Value" : { "Ref": "InternetGateway" }
    },

    "PublicRouteTable" : {
      "Description" : "Public Route Table",
      "Value" : { "Ref": "PublicRouteTable" }
    }

  }
}
